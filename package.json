{
  "name": "me",
  "description": "My personal web app",
  "version": "1.0.0",
  "author": "Alex Maingot <alex.maingot@gmail.com>",
  "private": true,
  "homepage": "https://hmm.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amaingot/me.git"
  },
  "workspaces": [
    "server", "web"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "generate": "graphql-codegen --config codegen.yml",
    "postinstall": "yarn generate",
    "start:in-container": "yarn --cwd=server start:in-container",
    "build:web": "yarn --cwd=web build"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@graphql-codegen/typescript-react-apollo": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "^1.18.1"
  }
}
